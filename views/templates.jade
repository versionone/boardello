script(type='text/javascript')
	(function(){
		var jade = require('jade')
			, templates = {}
			, templateFunctions = {}
					

		templates['board'] = 'h1.title \#{title} \\nbutton.change-title change the title \\n\\tbutton.add-card add a new card'
		templates['card'] = 'h3.title \#{title} \\n\#{id}'

		window.render = function(templateName, locals){
			if (!templateFunctions[templateName])
				templateFunctions[templateName] = jade.compile(templates[templateName])

			return templateFunctions[templateName](locals)
		}
	})()

